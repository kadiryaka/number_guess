<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff6bc96f" />
            <gradient android:angle="-90" android:startColor="#ff1d991a" android:endColor="#ff739a6f"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff83c37b" />
            <solid android:color="#ff83c37b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff367934" />
            <gradient android:angle="-90" android:startColor="#ffc0d4af" android:endColor="#ff83b280" />
        </shape>
    </item>
</selector>